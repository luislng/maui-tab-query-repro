<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiTabQueryRepro.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiTabQueryRepro"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home"
             Icon="home">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Favorites"
             Icon="favorite">
            <ShellContent
                Title="Favorites"
                ContentTemplate="{DataTemplate local:FavoritesPage}"
                Route="FavoritesPage" />
        </Tab>
        <Tab Title="Settings"
             Icon="settings">
            <ShellContent
                Title="Settings"
                ContentTemplate="{DataTemplate local:SettingsPage}"
                Route="SettingsPage" />
        </Tab>
    </TabBar>

</Shell>
